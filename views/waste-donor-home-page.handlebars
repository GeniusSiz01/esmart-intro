<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.css" rel="stylesheet" />
    <title>Document</title>
    <style>
        body {
            background-color: #52B788;
        }
    </style>
</head>

<body>
    <div>
        <div class="row">
            <div class="col-12">
                <img src="/images/esmartbin.png" width="50" style="float: left;">
                <h5>Welcome to eSmart solutions {{donoName}}</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <h5 class="center"> {{status}}</h5>
            </div>
        </div>
        <form action="/simulate/bins" method="POST">
            {{#each bins }}
            <div class="block canter">
                <strong>{{name}}</strong>
                <p> {{filled_capacity}}%</p>
                <img src="/images/esmartbin.png" width="80">
                <div class="ui checkbox">
                    <input type="checkbox" id="{{id}}" value="{{id}}" name="binTypes">
                    <label>Select bin</label>
                </div>
            </div>
            {{/each}}
            {{!-- <div class="row"> --}}
                <div class=" center">
                    <input type="text" name="donorId" value="{{donorId}}" hidden>
                    <button type="submit" class="ui button">
                        Simulate Bins
                    </button>
                </div>
            {{!-- </div> --}}
        </form>


        <div class="row">
            <form action="/add/bins" method="POST">
                <div class="col-12 center">
                    {{#each binTypes}}
                    <label for="checkid" style="word-wrap:break-word">
                        <input id="checkid" name="bins" type="checkbox" value="{{id}}" />{{name}}
                    </label>
                    {{/each}}
                </div>
                <input type="text" name="donor" value="{{donorId}}" hidden>
                <div class="center">
                    <button type="submit">Add bins</button>
                </div>
            </form>

        </div>





        {{!--
        <div class="row">
            <div class="col-12">
                <form action="/simulate/bins/{{donorId}}" method="POST">
                    <button type="submit" class="btn btn-primary btn-sm btn1">Simulate bins</button>
                </form>
            </div>

            <div class="col-12">
                <form action="/reset/bins/{{donorId}}" method="POST">
                    <button type="submit" class="btn btn-primary btn-sm btn1">Reset bins</button>
                </form>
            </div>
        </div> --}}

        <div class="row center">
            <div class="col-4">
                <form action="/reset/bins/{{donorId}}" method="POST">
                    <button type="submit" class="btn btn-primary btn-sm btn1">Reset bins</button>
                </form>
            </div>
            {{!-- <div class="col-4">
                <button type="submit" class="btn btn-primary btn-sm btn1">Simulate bins</button>
            </div> --}}
            <div class="col-4">
                <form action="/donor/history/{{donorId}}" method="POST">
                    <button type="submit" class="btn btn-primary btn-sm btn1">History</button>
                </form>
            </div>

        </div>

        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <div>

            <nav class="nav">
                <a href="#" class="nav__link">
                    <i class="material-icons nav_icon">home</i>
                    <span class="nav__text">Home</span>
                </a>
                <a href="#" class="nav__link active">
                    <i class="material-icons nav_icon">notification_important</i>
                    <span class="nav__text">Notifications</span>
                </a>
                <a href="#" class="nav__link">
                    <i class="material-icons nav_icon">contact_support</i>
                    <span class="nav__text">Support</span>
                </a>
                <a href="#" class="nav__link">
                    <i class="material-icons nav_icon">manage_accounts</i>
                    <span class="nav__text">Profile</span>
                </a>
                <a href="#" class="nav__link">
                    <i class="material-icons nav_icon">menu_open</menu></i>
                    <span class="nav__text">More options</span>
                </a>


            </nav>
        </div>

    </div>
</body>

</html>